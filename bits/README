
Various ways to test bits


unsigned int b00(unsigned a) { return (a & 0x0001) == 0x0; }
unsigned int b00(unsigned a) { return (a & 0x0001) != 0x0; }

unsigned int b00(unsigned a) { return (a >> 0x01)  == 0x0; }
unsigned int b00(unsigned a) { return (a >> 0x01)  != 0x0; }

unsigned int b00(unsigned a) { return (a &  0x01)  == 0x01; }
unsigned int b00(unsigned a) { return (a &  0x01)  != 0x01; }





